<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:background="?android:attr/selectableItemBackground">
    <es.claucookie.miniequalizerlibrary.EqualizerView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/equalizer"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:animDuration="4000"
        android:visibility="gone"
        app:foregroundColor="@color/colorPrimary"></es.claucookie.miniequalizerlibrary.EqualizerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Старенький трамвай"
        android:id="@+id/titleTv"
        android:layout_toRightOf="@+id/equalizer"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:maxWidth="300dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/equalizer"
        android:text="Пікардійська терція"
        android:id="@+id/groupTv"
        android:textSize="16sp"
        android:maxWidth="300dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/titleTv"
        android:layout_marginLeft="10dp"
        android:textColor="#6e746f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:20"
        android:id="@+id/durationTv"
        android:textSize="16sp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#5b605c"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/groupTv"
        android:background="#8692cc"></View>

</RelativeLayout>